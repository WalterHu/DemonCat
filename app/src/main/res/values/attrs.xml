<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CirclePercentView">
        <!-- Circle radius size -->
        <attr name="radius" format="dimension" />
        <!-- Circle stripe width -->
        <attr name="stripeWidth" format="dimension" />
        <!-- Percent max is 100-->
        <attr name="percent" format="integer" />
        <!-- Small circle color  -->
        <attr name="smallColor" format="color" />
        <!-- Ring color -->
        <attr name="bigColor" format="color" />
        <!-- Text center size -->
        <attr name="centerTextSize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="GradientTextView">
        <!-- gradient start color -->
        <attr name="startColor" format="reference|color"/>
        <!-- gradient end color -->
        <attr name="endColor" format="reference|color"/>
    </declare-styleable>
    <declare-styleable name="RoundCornerImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
    </declare-styleable>
    <declare-styleable name="SliddingMenu">
        <attr name="rigthtPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ClearEditText">
        <attr name="cet_type">
            <enum name="common" value="0" />
            <enum name="plate" value="1" />
            <enum name="engine" value="2" />
            <enum name="vin" value="3" />
            <enum name="pin" value="4" />
            <enum name="username" value="5" />
            <enum name="password" value="6" />
            <enum name="telephone" value="7" />
            <enum name="search" value="8" />
        </attr>
        <attr name="hint_size" format="dimension"/>
    </declare-styleable>
    <!--Scroll layout -->
    <declare-styleable name="ScrollLayout">
        <attr name="minOffset" format="dimension" />
        <attr name="maxOffset" format="dimension" />
        <attr name="exitOffset" format="dimension" />
        <attr name="mode">
            <flag name="open" value="0x0" />
            <flag name="close" value="0x1" />
            <flag name="exit" value="0x2" />
        </attr>
        <attr name="allowHorizontalScroll" format="boolean" />
        <attr name="isSupportExit" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomViewGroup">
        <attr name="hSpace" format="dimension" />
        <attr name="wSpace" format="dimension" />
    </declare-styleable>
</resources>